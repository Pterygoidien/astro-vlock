---
import ThemeToggler from './ThemeToggler.astro'
import Logo from '~/assets/images/logo/logo-vlock.png'
---
<style>
    header {
        position:sticky;
        top:0;
        z-index:5009;

    }
    #burger-menu{
        position:relative;
        user-select:none;
        z-index:103;
        
    }
    #burger-menu a {
        text-decoration:none;
        font-size:1.5rem;
        font-weight:600;
        margin:0 10px;
        transition:all 0.3s ease-in-out;
        padding:10px;
        border-radius:5px;
        border:1px solid transparent;
    }

    #burger-menu input[type="checkbox"]{
        display:block;
        width:40px;
        height:40px;
        position:absolute;
        top:-7px;
        left:-5px;
        cursor:pointer;
        opacity:0; 
        z-index:2;
    }


    #burger-menu:hover {
        cursor:pointer;
    }
    #burger-menu  span {
        display:block;
        width:30px;
        height:3px;
        background-color:white;
        margin:5px;
        transition:all 0.3s ease-in-out;
        border-radius:3px;
        transform-origin: 4px 0px;
    
        transition: transform 0.5s cubic-bezier(0.77,0.2,0.05,1.0), background 0.5s cubic-bezier(0.77,0.2,0.05,1.0), sopacity 0.55s ease;

    }
    #burger-menu__nav {
        position:absolute;
        top:28px;
        left:-75px;
        width:700px;
        padding:100px;
        max-width: 100vw;
        transform: translate(-120%, 0);
        background-color:hsl(var(--color-tertiary) / 0.95);
    
    transition: transform 0.7s cubic-bezier(0.77,0.2,0.05,1.0);
    }
    #burger-menu input[type="checkbox"]:checked ~ #burger-menu__nav {
        transform: translate(0%, 0);
    }
</style>
<header id="main-header" class="flex items-center justify-between bg-tertiary border-b-4 border-indigo-500 p-2">
   
        <div id="burger-menu" class="lg:hidden">
          <input type="checkbox" />

          <span></span>
          <span></span>
          <span></span>

          <ul
            id="burger-menu__nav"
            class="bg-primary flex flex-col gap-4"
          >
            <li>
              <a href="/">Accueil</a>
            </li>
            <li>
              <a href="/signup/">S'enregistrer</a>
            </li>

          </ul>
        </div>
        <img src={Logo.src} width={Logo.width} height={Logo.height} alt="Logo Vlock" class="w-24" />
        <nav class="flex-grow uppercase font-bold hidden lg:block">
          <ul class="flex gap-3 items-center mx-auto justify-center self-center">
                    <li><a href="/">Accueil</a></li>
                    <li><a href="/pricing">Abonnements</a></li>
                    <li><a href="/parkings/" class="bg-sky-500 hover:bg-sky-700 text-white font-bold py-2 px-4 rounded dark:bg-sky-200 dark:text-black">Carte des parkings</a></li>
                    <li><a href="#">A propos</a></li>
                    <li><a href="/contact">Contact</a></li>
                   </ul>
        </nav>
        <div id="toggleSection">
          <ul class="flex items-center gap-3">
            <li>
              <ThemeToggler />
            </li>
            <li>
              <a
                href="/signup/"
                class="bg-sky-500 hover:bg-sky-700 text-white font-bold py-2 px-4 rounded hidden lg:block"
              >
                S'enregistrer
            </a>
            </li>
          </ul>
        </div>
     
</header>

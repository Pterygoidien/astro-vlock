---
import { Image } from "astro:assets";

import MainLayout from "../layouts/MainLayout.astro";
import Section from "../components/wrappers/Section.astro";
import Logo from "../assets/images/logo/logo-vlock_window.webp";
import MapLogo from "../assets/images/map-ui.webp";
import SignUpLogo from "../assets/images/signup-ui.webp";
import BikeLogo from "../assets/images/bike-ui.webp";
---

<script client:only>
const languageCodes = {
  fr: ['fr', 'fr-BE', 'fr-FR'],
  en: ['en', 'en-US'],
  de: ['de'],
  nl: ['be-NL', 'nl']
};

const defaultLanguage = 'fr'; // Set your default language here

const acceptLanguage = window.navigator.language || defaultLanguage;
const languageCode = acceptLanguage.split('-')[0];

let languageFolder = defaultLanguage;
for (const [folder, codes] of Object.entries(languageCodes)) {
  if (codes.includes(languageCode)) {
    languageFolder = folder;
    break;
  }
}
window.location.href = `/${languageFolder}/`;
</script>


